<Context path="/cat"
        docBase="<%= @app %>.war"
        debug="0" antiResourceLocking="true" >

        <Resource name="jdbc/currimap" auth="Container" type="javax.sql.DataSource"
                maxActive="30" maxIdle="10" maxWait="-1"
                username="<%= @db_user %>" password="<%= @db_password %>"
                driverClassName="com.mysql.jdbc.Driver"
                url="jdbc:mysql://<%= @db_host %>/<%= @db_name %>?autoReconnect=true"/>

</Context>
